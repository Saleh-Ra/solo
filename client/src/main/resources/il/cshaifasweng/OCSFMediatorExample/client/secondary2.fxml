<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="700.0" prefWidth="800.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SecondaryController"
            style="-fx-background-color: #f4f4f4;">

    <!-- Header Section -->
    <top>
        <VBox spacing="5" style="-fx-background-color: #3f87a6; -fx-padding: 15px;">
            <HBox alignment="CENTER" spacing="10">
                <Label text="Manager Dashboard" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" />
                <Label fx:id="branchNameLabel" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;" />
            </HBox>
            <Label fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: #e0f7fa;" />
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20px;">
            <!-- Menu Items Display -->
            <TitledPane text="Menu Items" expanded="true" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <content>
                    <ScrollPane fitToWidth="true" prefHeight="350" style="-fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="menuDisplayVBox" spacing="10" style="-fx-padding: 10px;">
                                <!-- Menu items will be added here dynamically -->
                            </VBox>
                        </content>
                    </ScrollPane>
                </content>
            </TitledPane>
            
            <!-- Menu Management Section -->
            <TitledPane text="Update Existing Item" expanded="false" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <content>
                    <GridPane hgap="15" vgap="15" style="-fx-padding: 15px;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        </columnConstraints>
                        
                        <Label text="Select Item:" 
                               style="-fx-font-size: 14px;" 
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />
                               
                        <ComboBox fx:id="mealComboBox" 
                                 promptText="Select a menu item" 
                                 editable="true"
                                 prefWidth="300"
                                 GridPane.rowIndex="0" GridPane.columnIndex="1" />
                                 
                        <Label text="New Price:" 
                               style="-fx-font-size: 14px;" 
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />
                               
                        <TextField fx:id="newPriceField" 
                                  promptText="Enter new price" 
                                  prefWidth="300"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1" />
                                  
                        <Button fx:id="updatePriceButton" 
                                text="Update Price" 
                                onAction="#updatePrice"
                                prefWidth="150" prefHeight="35"
                                style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                                GridPane.rowIndex="1" GridPane.columnIndex="2" />
                    </GridPane>
                </content>
            </TitledPane>
            
            <!-- Add New Item Section -->
            <TitledPane text="Add New Menu Item" expanded="false" style="-fx-font-size: 16px; -fx-font-weight: bold;">
                <content>
                    <VBox spacing="15" style="-fx-padding: 15px;">
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                            </columnConstraints>
                            
                            <Label text="Name:" 
                                   style="-fx-font-size: 14px;" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                   
                            <TextField fx:id="newItemNameField" 
                                      promptText="Enter item name" 
                                      prefWidth="300"
                                      GridPane.rowIndex="0" GridPane.columnIndex="1" />
                                      
                            <Label text="Ingredients:" 
                                   style="-fx-font-size: 14px;" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                   
                            <TextField fx:id="newItemIngredientsField" 
                                      promptText="Enter ingredients" 
                                      prefWidth="300"
                                      GridPane.rowIndex="1" GridPane.columnIndex="1" />
                                      
                            <Label text="Preferences:" 
                                   style="-fx-font-size: 14px;" 
                                   GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                   
                            <TextField fx:id="newItemPreferencesField" 
                                      promptText="Enter dietary preferences" 
                                      prefWidth="300"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1" />
                                      
                            <Label text="Price:" 
                                   style="-fx-font-size: 14px;" 
                                   GridPane.rowIndex="3" GridPane.columnIndex="0" />
                                   
                            <TextField fx:id="newItemPriceField" 
                                      promptText="Enter price" 
                                      prefWidth="300"
                                      GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        </GridPane>
                        
                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="addNewItemButton" 
                                    text="Add New Item" 
                                    onAction="#addNewItem"
                                    prefWidth="150" prefHeight="35"
                                    style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
                        </HBox>
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 15px;">
            <Button fx:id="switchToPrimaryButton" 
                    text="Logout" 
                    onAction="#switchToPrimary"
                    prefWidth="120" prefHeight="35"
                    style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;" />
            <padding>
                <Insets right="20" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>

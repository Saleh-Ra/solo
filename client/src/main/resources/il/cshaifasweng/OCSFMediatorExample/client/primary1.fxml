<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController"
            style="-fx-background-color: linear-gradient(to bottom right, #3f87a6, #ebf8e1);"
            stylesheets="@modern-style.css">

   <VBox alignment="CENTER" prefHeight="382.0" prefWidth="565.0" spacing="20.0" layoutX="0" layoutY="0">
      <children>
         <Label text="Restaurant Kitchen" style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 3, 0, 0, 1);" />
         <Label text="Welcome to our delicious experience" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-style: italic;" />
         
         <Button fx:id="openingHoursButton" onAction="#handleOpeningHours" text="ðŸ•’ Opening Hours" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px; -fx-background-color: #007bff; -fx-text-fill: white; -fx-border-color: #0056b3; -fx-border-width: 2px; -fx-cursor: hand; -fx-font-weight: bold;" />
         
         <Button fx:id="userMenuButton" onAction="#handleUserMenu" text="User Menu" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px;" />
         
         <Button fx:id="reservationButton" onAction="#handleMakeReservation" text="Simple Reservation" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px;" />
         
         <Button fx:id="tableDiagramButton" onAction="#handleTableDiagram" text="Visual Table Reservation" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px;" />
         
         <Button fx:id="personalAreaButton" onAction="#handlePersonalArea" text="Personal Area" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px;" />
         
         <Button fx:id="cancelReservationButton" onAction="#handleCancelReservation" text="Cancel Reservation" 
                 style="-fx-min-width: 200px; -fx-min-height: 40px; -fx-font-size: 16px;" />
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>

</AnchorPane>

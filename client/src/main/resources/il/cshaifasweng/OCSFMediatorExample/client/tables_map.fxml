<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" styleClass="main-container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.boundary.TablesMapController">
   <children>
      
      <!-- Header Section -->
      <VBox alignment="CENTER" spacing="10">
         <Label text="Table Reservation" styleClass="title-label">
            <font>
               <Font size="28.0" />
            </font>
         </Label>
         <Label text="Select your preferred table and time" styleClass="subtitle-label" />
         <Label fx:id="branchLabel" text="📍 Branch" styleClass="branch-label" />
      </VBox>
      
      <!-- Reservation Details Section -->
      <HBox alignment="CENTER" spacing="20">
         <VBox alignment="CENTER" spacing="5">
            <Label text="Date:" />
            <DatePicker fx:id="datePicker" />
         </VBox>
         
         <VBox alignment="CENTER" spacing="5">
            <Label text="Time:" />
            <ComboBox fx:id="timeComboBox" prefWidth="120" />
         </VBox>
         
      </HBox>
      
      <!-- Legend -->
      <HBox alignment="CENTER" spacing="20">
         <Label text="Legend:" styleClass="legend-label" />
         <HBox alignment="CENTER" spacing="10">
            <Label text="🟢 Available" style="-fx-text-fill: #28a745; -fx-font-weight: bold;" />
         </HBox>
         <HBox alignment="CENTER" spacing="10">
            <Label text="🔴 Reserved" style="-fx-text-fill: #dc3545; -fx-font-weight: bold;" />
         </HBox>
         <HBox alignment="CENTER" spacing="10">
            <Label text="🔵 Selected" style="-fx-text-fill: #007bff; -fx-font-weight: bold;" />
         </HBox>
      </HBox>
      
      <!-- Restaurant Map Layout -->
      <VBox alignment="CENTER" spacing="20">
         <Label text="Restaurant Floor Plan:" styleClass="section-label" />
         
         <!-- Main Restaurant Area -->
         <VBox alignment="CENTER" spacing="25" style="-fx-border-color: #dee2e6; -fx-border-width: 2; -fx-border-radius: 8; -fx-padding: 20; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
            
            <!-- Inside Area - Tables 1-4 -->
            <VBox alignment="CENTER" spacing="15">
               <Label text="INSIDE AREA" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #495057;" />
               
               <!-- Top row inside -->
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="table1Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
                  <Button fx:id="table2Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
               </HBox>
               
               <!-- Bottom row inside -->
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="table3Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
                  <Button fx:id="table4Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
               </HBox>
            </VBox>
            
            <!-- Outside Area - Tables 5-8 -->
            <VBox alignment="CENTER" spacing="15">
               <Label text="OUTSIDE AREA" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #495057;" />
               
               <!-- Top row outside -->
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="table5Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
                  <Button fx:id="table6Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
               </HBox>
               
               <!-- Bottom row outside -->
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="table7Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
                  <Button fx:id="table8Button" prefWidth="80" prefHeight="60" styleClass="table-button" />
               </HBox>
            </VBox>
            
         </VBox>
      </VBox>
      
      <!-- Status and Actions Section -->
      <VBox alignment="CENTER" spacing="15">
         <Label fx:id="selectedTableLabel" text="Table Management View" styleClass="status-label" />
         
         <HBox alignment="CENTER" spacing="20">
            <Button text="Back" styleClass="back-button" onAction="#handleBack" />
         </HBox>
         
         <Label fx:id="statusLabel" text="View table availability and status" styleClass="status-label" />
      </VBox>
      
   </children>
   
</VBox>

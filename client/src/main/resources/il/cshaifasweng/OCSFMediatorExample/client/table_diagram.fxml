<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.boundary.TableDiagramController"
            prefWidth="900" prefHeight="700"
            stylesheets="@modern-style.css">

    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            
            <Label text="ðŸ‘¨â€ðŸ³ Table Reservation" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            <Label text="Select your preferred table and time" style="-fx-font-size: 16px;"/>

            <HBox spacing="15" alignment="CENTER">
                <Label text="Branch:" />
                <ComboBox fx:id="branchComboBox" prefWidth="150" />
                
                <Label text="Date:" />
                <DatePicker fx:id="datePicker" />
                
                <Label text="Time:" />
                <ComboBox fx:id="timeComboBox" prefWidth="100" />
                
                <Label text="Guests:" />
                <Spinner fx:id="guestsSpinner" prefWidth="80" editable="true" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Phone Number:" />
                <TextField fx:id="phoneField" promptText="Enter your phone number" prefWidth="200" />
            </HBox>
            
            <HBox spacing="20" alignment="CENTER">
                <Label text="Legend:" />
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Rectangle width="20" height="20" fill="green" />
                    <Label text="Available" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Rectangle width="20" height="20" fill="red" />
                    <Label text="Reserved" />
                </HBox>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Rectangle width="20" height="20" fill="lightblue" />
                    <Label text="Selected" />
                </HBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <HBox alignment="CENTER" spacing="50">
                    <VBox alignment="CENTER">
                        <Label text="BAR AREA" style="-fx-font-weight: bold;" />
                        <GridPane fx:id="barAreaGrid" hgap="10" vgap="10" alignment="CENTER" 
                                  style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px;"
                                  minWidth="200" minHeight="150">
                            <!-- Tables will be added here programmatically -->
                        </GridPane>
                    </VBox>
                    
                    <VBox alignment="CENTER">
                        <Label text="INSIDE AREA" style="-fx-font-weight: bold;" />
                        <GridPane fx:id="insideAreaGrid" hgap="10" vgap="10" alignment="CENTER"
                                  style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px;"
                                  minWidth="350" minHeight="300">
                            <!-- Tables will be added here programmatically -->
                        </GridPane>
                    </VBox>
                    
                    <VBox alignment="CENTER">
                        <Label text="OUTSIDE AREA" style="-fx-font-weight: bold;" />
                        <GridPane fx:id="outsideAreaGrid" hgap="10" vgap="10" alignment="CENTER"
                                  style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 10px; -fx-border-color: #ccc; -fx-border-radius: 5px;"
                                  minWidth="250" minHeight="200">
                            <!-- Tables will be added here programmatically -->
                        </GridPane>
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            
            <HBox spacing="20" alignment="CENTER">
                <Label fx:id="selectedTableLabel" text="No table selected" />
                <Button text="Reserve Table" fx:id="reserveButton" onAction="#handleReserveTable" styleClass="success-button" disable="true" />
                <Button text="Back" onAction="#handleBack" styleClass="secondary-button" />
            </HBox>
            
            <Label fx:id="statusLabel" style="-fx-text-fill: red;" wrapText="true" />
        </VBox>
    </bottom>
    
</BorderPane> 
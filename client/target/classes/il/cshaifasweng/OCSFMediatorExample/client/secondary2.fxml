<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SecondaryController">
    <children>
        <!-- Title -->
        <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Restaurant Menu" />

        <!-- Scrollable Menu Display -->
        <ScrollPane layoutX="50.0" layoutY="60.0" prefWidth="700.0" prefHeight="400.0" fitToWidth="true">
            <content>
                <VBox fx:id="menuDisplayVBox" spacing="10" />
            </content>
        </ScrollPane>

        <!-- VBox for Menu Actions -->
        <VBox layoutX="100.0" layoutY="480.0" spacing="15">
            <!-- Editable Meal Selection -->
            <HBox spacing="10">
                <Label text="Select/Type Meal:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="mealComboBox" prefWidth="250.0" editable="true" promptText="Select or type a meal" />
            </HBox>

            <!-- New Price Input -->
            <HBox spacing="10">
                <Label text="New Price:" style="-fx-font-weight: bold;" />
                <TextField fx:id="newPriceField" promptText="Enter new price" />
            </HBox>

            <!-- Update Price Button -->
            <Button fx:id="updatePriceButton" onAction="#updatePrice" text="Update Price" />

            <!-- Section to Add New Menu Item -->
            <Label text="Add New Menu Item:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <TextField fx:id="newItemNameField" promptText="Name" />
                <TextField fx:id="newItemIngredientsField" promptText="Ingredients" />
                <TextField fx:id="newItemPreferencesField" promptText="Preferences" />
                <TextField fx:id="newItemPriceField" promptText="Price" />
            </HBox>
            <HBox spacing="10">
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="addNewItemButton" onAction="#addNewItem" text="Add New Item" />
            </HBox>
        </VBox>

        <!-- Status Label -->
        <Label fx:id="statusLabel" layoutX="100.0" layoutY="675.0" style="-fx-font-size: 16px;" text="Status: " />

        <!-- Switch to Primary View Button -->
        <Button fx:id="switchToPrimaryButton" layoutX="470.0" layoutY="670.0" onAction="#switchToPrimary" text="Back to Main Menu" />
    </children>
</AnchorPane>

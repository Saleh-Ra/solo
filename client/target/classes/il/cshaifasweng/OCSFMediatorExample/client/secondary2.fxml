<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SecondaryController">
    <children>
        <!-- Title -->
        <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Restaurant Menu" />

        <!-- VBox for displaying menu items -->
        <VBox fx:id="menuDisplayVBox" layoutX="50.0" layoutY="60.0" prefWidth="700.0" spacing="10" />

        <!-- VBox for Menu Actions (moved to the middle of the screen) -->
        <VBox layoutX="100.0" layoutY="300.0" spacing="15">
            <!-- Editable Meal Selection -->
            <HBox spacing="10">
                <Label text="Select/Type Meal:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="mealComboBox" prefWidth="250.0" editable="true" promptText="Select or type a meal" />
            </HBox>

            <!-- New Price Input -->
            <HBox spacing="10">
                <Label text="New Price:" style="-fx-font-weight: bold;" />
                <TextField fx:id="newPriceField" promptText="Enter new price" />
            </HBox>

            <!-- Update Price Button -->
            <Button fx:id="updatePriceButton" onAction="#updatePrice" text="Update Price" />

            <!-- Section to Add New Menu Item -->
            <Label text="Add New Menu Item:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <TextField fx:id="newItemNameField" promptText="Name" />
                <TextField fx:id="newItemIngredientsField" promptText="Ingredients" />
                <TextField fx:id="newItemPreferencesField" promptText="Preferences" />
                <TextField fx:id="newItemPriceField" promptText="Price" />
            </HBox>
            <Button fx:id="addNewItemButton" onAction="#addNewItem" text="Add New Item" />
        </VBox>

        <!-- Status Label -->
        <Label fx:id="statusLabel" layoutX="100.0" layoutY="550.0" style="-fx-font-size: 16px;" text="Status: " />

        <!-- Switch to Primary View Button -->
        <Button fx:id="switchToPrimaryButton" layoutX="30.0" layoutY="550.0" onAction="#switchToPrimary" text="Back to Main Menu" />
    </children>
</AnchorPane>

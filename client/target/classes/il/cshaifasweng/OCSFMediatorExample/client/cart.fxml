<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.boundary.CartController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Your Cart" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ListView fx:id="cartListView" prefHeight="200" prefWidth="400" />

    <Label fx:id="totalCostLabel" text="Total: $" style="-fx-font-size: 16px;" />

    <HBox spacing="10">
        <Button text="Place Order" onAction="#handlePlaceOrder" />
        <Button text="Clear Cart" onAction="#handleClearCart" />
        <Button text="Back to Menu" onAction="#handleBackToMenu" />
    </HBox>
</VBox>

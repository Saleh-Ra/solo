<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PrimaryController"
            style="-fx-background-image: url('/il/cshaifasweng/OCSFMediatorExample/client/kitchen1.jpeg');
                   -fx-background-size: cover;">

   <VBox alignment="CENTER" prefHeight="382.0" prefWidth="565.0" spacing="20.0" layoutX="0" layoutY="0">
      <children>
         <Label text="Welcome" style="-fx-font-size: 24px; -fx-text-fill: white;" />
         <Button fx:id="managerLoginButton" onAction="#handleManagerLogin" text="Manager Login" />
         <Button fx:id="userMenuButton" onAction="#handleUserMenu" text="User Menu" />
         <Button fx:id="reservationButton" onAction="#handleMakeReservation" text="Make Reservation" />
         <Button fx:id="personalAreaButton" onAction="#handlePersonalArea" text="Personal Area" />
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>

</AnchorPane>
